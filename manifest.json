{
  "manifest_version": 2,

  "name": "Cookies Viewer",
  "description": "Cookies Viewer",
  "version": "1.0.0",
  "icons": { "128": "icon_128.png" },
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [ "cookies", "tabs", "http://*/*", "https://*/*" ]
}